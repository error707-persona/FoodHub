@model IEnumerable<WebApplication1.Models.Order>

@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top: 30px;">
    <div class="row">
        @foreach (WebApplication1.Models.Order details in Model)
        {
            var parameters = new Dictionary<string, string>()
                    { {"Foodname",details.Foodname},
                        { "Image", details.Image},
                        { "Description",details.Description},
                        { "Price", details.Price},
                        { "Brandname", details.Brandname}
                    } ;

    <div class="col-sm-4">
        <div class="card mb-3">
            <h3 class="card-header">@details.Foodname</h3>
            <div class="card-body">
                <h5 class="card-title">Price</h5>
                <h6 class="card-subtitle text-muted">₹ @details.Price</h6>
            </div>
            <image src="@Url.Content(@details.Image)" width="100%" height="370">
            <div class="card-body">
                <p class="card-text">@details.Description</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@details.Brandname</li>
                <li class="list-group-item">₹ @details.Price</li>
            </ul>
            <div class="card-body">
                <div class="btn-group">
                    <a href="/OrderFinal/OrderFinal/@details.Foodname" class="btn btn-sm btn-outline-secondary">Order Now</a>
                </div>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save" viewBox="0 0 16 16" preserveAspectRatio="xMaxYMax meet">
                    <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1H2z" />
                </svg>
                <!--<a class="card-link">Save For Later</a>-->
            </div>
            <div class="card-footer text-muted">
                Posted on: @details.date
            </div>
        </div>
    </div>
        }
</div>
</div>
